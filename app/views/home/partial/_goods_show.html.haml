#ajax_category_product
  .class_rule_retrieval
    %h3.left
      检索出
      %b.Red
        =@goods.count
      个符合您需求的商品
    %h3.right{:style=>"margin-right:10px;"}
      = paginate @key_goods
  .category_product
    -@key_goods.each do |g|
      %a
        .main_products_li.left{:style=>"background-image: url('"+asset_path("test/brandBodyBG.gif")+"');"}
          .p_img
            %a{:href=>good_path(g)}
              =image_tag( g.logo_url1, height:"135", width:"175")
          .p_title
            %a{:href=>good_path(g)}
              =g.title
            %br
            %a
              =g.mall_category.name
          .p_price
            %span ￥
            %b
              =g.mall_skus.first.price
            .right_price.right
              %span 原价：￥
              %i{:style=>"text-decoration:line-through;"}
                =g.mall_skus.first.show_price
  .class_rule_retrieval.left{:style=>"width:97%;"}
    %h3
      检索出
      %b.Red
        =@goods.count
      个符合您需求的商品
    %h3.right{:style=>"margin-right:10px;"}
      = paginate @key_goods
