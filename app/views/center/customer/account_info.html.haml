        - if @card.activated_date.present?
          =@card.activated_date.localtime.strftime("%Y年%m月%d日")+"--"+@card.expiring_date.strftime("%Y年%m月%d日")

      %br
      %hr
      %br
      %div{:align=>"center"}
        服务车行
      %div
